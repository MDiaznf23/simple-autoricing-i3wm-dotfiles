@import "~/.cache/wal/colors-rofi-dark.rasi"

* {
    /* Mengatur font default (opsional, sesuaikan dengan font sistemmu) */
    font: "JetBrains Mono Nerd Font 10"; 
    
    background-color: transparent;
    text-color: @foreground;
    margin: 0px;
    padding: 0px;
}

window {
    width: 350px; /* Sedikit lebih ramping agar terlihat seperti dialog box */
    border-radius: 12px;
    background-color: @background;
    border: 2px solid;
    border-color: @selected-active-background; /* Menggunakan warna aksen */
    
    /* Posisi di tengah layar */
    location: center;
    anchor: center;
    
    /* Padding internal window */
    padding: 20px;
}

mainbox {
    children: [ message, inputbar ];
    spacing: 20px;
    background-color: transparent;
}

/* Bagian Pesan (Biasanya menampilkan nama SSID) */
message {
    background-color: @active-background;
    padding: 15px;
    border-radius: 8px;
    border: 1px solid;
    border-color: @selected-normal-background;
}

textbox {
    text-color: @foreground;
    background-color: transparent;
    horizontal-align: 0.5; /* Teks rata tengah */
    vertical-align: 0.5;
    font: "JetBrains Mono Nerd Font Bold 10"; /* Membuat nama Wifi lebih tebal */
}

/* Bagian Input Password */
inputbar {
    children: [ prompt, entry ];
    background-color: @background;
    border: 2px solid;
    border-color: @foreground; /* Border halus di sekitar input */
    border-radius: 8px;
    padding: 0px;
}

prompt {
    background-color: @selected-normal-background;
    text-color: @background; /* Warna teks kontras dengan background prompt */
    padding: 12px 15px;
    border-radius: 6px 0px 0px 6px; /* Membulat hanya di kiri */
    margin: 0px;
}

entry {
    placeholder: "Type password";
    placeholder-color: @foreground; /* Sedikit transparan agar terlihat seperti placeholder */
    background-color: transparent;
    text-color: @foreground;
    padding: 12px;
    border-radius: 0px 6px 6px 0px;
    vertical-align: 0.5;
}
